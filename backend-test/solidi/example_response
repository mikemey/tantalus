  <script type="text/javascript">
  	// This function doesn't seem to work on IE.
	function cssLoaded(href) {
		var cssFound = false;
		for(var i = 0; i < document.styleSheets.length; i++) {
			var sheet = document.styleSheets[i];
			if(sheet['href'] != null && sheet['href'].indexOf(href) >= 0 && sheet['cssRules'].length > 0) {
				cssFound = true;
			}
		};
		if(!cssFound) {
			addCSS(href);
		}
		return cssFound;
	}
	
	function addCSS(href) {
		local_bootstrap = document.createElement('link');
		local_bootstrap.setAttribute("rel", "stylesheet");
		local_bootstrap.setAttribute("type", "text/css");
		local_bootstrap.setAttribute("href", href);
		document.getElementsByTagName("head")[0].appendChild(local_bootstrap);
	}

	// Check JS
	if (typeof jQuery == 'undefined') {
		document.write(unescape("%3Cscript src='/js/jquery-1.10.1.js'        type='text/javascript'%3E%3C/script%3E"));
		document.write(unescape("%3Cscript src='/js/jquery-migrate-1.2.1.js' type='text/javascript'%3E%3C/script%3E"));
		document.write(unescape("%3Cscript src='/js/jquery.validate.js'      type='text/javascript'%3E%3C/script%3E"));
		document.write(unescape("%3Cscript src='/js/additional-methods.js'   type='text/javascript'%3E%3C/script%3E"));
	}

	// euw....
	var element3 = document.querySelector('#bootstrapCssTest');
	var result = element3.currentStyle ? element3.currentStyle["display"] : window.getComputedStyle ? window.getComputedStyle(element3, null).getPropertyValue("display") : null;
	if (result=="block") {
		addCSS('css/bootstrap.css');
	}
	
</script>
