    <script>
      var BuyFormValidator;
      $(document).ready(function() {
      	console.log("Ready");
      
        $('a[data-toggle="tooltip"]').tooltip({
            animated: 'fade',
            placement: 'right',
        })
      
        // Calculate the correct price when the site loads.
        //recalculateSell();
        $.validator.addMethod("mincur", function(value, element, params) {
            var minCur = params[0] || 1;
//            console.log("Value="+value+" minCur"+minCur);
            var cur = value;
            if(value.indexOf("£")!=-1) {
            	cur = value.split("£")[1];
            }
//            console.log("Value="+cur);
            cur = parseFloat(cur);
//            console.log("Value="+cur+" = "+(cur >= minCur));
            return cur >= minCur;
        });        
        
        jQuery.validator.setDefaults({
          debug: true,
          success: "valid"
        });
//        console.log("Loading2");        
                
        BuyFormValidator = $("#buyform").validate({
        	onfocusout: true,
        	submitHandler: function(form) { form.submit(); },
        	rules: {
        		buybtcqty: {
        			required: true,
        			max: 0.0103        			
        		},
        		buycuramt: {
        			required: true,
        			mincur: [2]
        		}	
        	},
        	messages: {
        		buybtcqty: "Maximum 0.0103 BTC",
        		buycuramt: "Minumum £2.00"
        	}
        });
        SellFormValidator = $("#sellform").validate({
        	onfocusout: true,
        	submitHandler: function(form) { form.submit(); },
        	rules: {
        		sellbtcqty: {
        			required: true,
        			max: 0.0103        			
        		},
        		sellcuramt: {
        			required: true,
        			mincur: [2]
        		}	
        	},
        	messages: {
        		sellbtcqty: "Maximum 0.0103 BTC",
        		sellcuramt: "Minumum £2.00"
        	}
        });

		var logger = new Logger();
		ws = new CoincoAPI('www.solidi.co',443, logger);
		window.ws = ws;
		
		buy_limit = Big("0.0103");
		
		if ("michael.mayer99@gmail.com"!="") {
			ws.login("michael.mayer99@gmail.com",
			         "EOCJYFdCsb7ttXYECaKQ", function(err, msg) {
				buy_btc_update(true);
				sell_btc_update(true);
			});
		} else {
			buy_btc_update(true);
			sell_btc_update(true);
		}
      });
      
