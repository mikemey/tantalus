{
  "name": "tantalus",
  "version": "3.0.0",
  "description": "tantalus",
  "engines": {
    "node": "8"
  },
  "main": "backend/index.js",
  "scripts": {
    "postinstall": "bower install",
    "lint": "standard",
    "prestart": "npm install",
    "start": "node backend/index.js",
    "preschedule": "npm install",
    "schedule": "node schedule",
    "pretrader": "npm install",
    "trader": "node trader",
    "simulation": "node simulation",
    "be-test": "mocha 'backend-test/**/**.spec.js'",
    "be-watch": "nodemon -x 'npm run be-test -s' --ignore '**.log'",
    "simulation-test": "mocha 'simulation-test/**/**.spec.js' 'transactions-test/**/**.spec.js' 'utils-test/**/**.spec.js'",
    "simulation-watch": "nodemon -x 'npm run simulation-test -s' --ignore '**.log'",
    "all-test": "mocha 'backend-test/**/**.spec.js' 'simulation-test/**/**.spec.js' 'trader-test/**/**.spec.js' 'transactions-test/**/**.spec.js' 'schedule-test/**/**.spec.js' 'utils-test/**/**.spec.js'",
    "all-watch": "nodemon -x 'npm run all-test -s' --ignore '**.log'",
    "fe-test": "karma start karma.conf.js",
    "fe-watch": "nodemon -x 'npm run fe-test -s' --ignore '**.log'",
    "pretest": "npm install",
    "test": "npm run lint -s && npm run all-test -s && npm run fe-test -s"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/mikemey/tantalus.git"
  },
  "author": "mikemey",
  "license": "MIT",
  "bugs": {},
  "dependencies": {
    "assign-deep": "^0.4.6",
    "body-parser": "^1.17.2",
    "cheerio": "^1.0.0-rc.2",
    "cli-color": "^1.2.0",
    "comedy": "^1.2.4",
    "connect-mongo": "^1.3.2",
    "cookie-parser": "^1.4.3",
    "cors": "^2.8.4",
    "csurf": "^1.9.0",
    "express": "^4.13.3",
    "express-session": "^1.15.5",
    "js-combinatorics": "^0.5.2",
    "moment": "^2.18.1",
    "mongodb": "^2.2.31",
    "mongoose": "^4.11.10",
    "morgan": "^1.8.2",
    "node-schedule": "^1.2.4",
    "passport": "^0.4.0",
    "passport-local": "^1.0.0",
    "passport-local-mongoose": "^4.2.1",
    "request": "^2.81.0",
    "request-promise": "^4.2.1",
    "winston": "^3.0.0-rc1"
  },
  "standard": {
    "globals": [
      "after",
      "afterEach",
      "angular",
      "before",
      "beforeEach",
      "context",
      "describe",
      "expect",
      "it",
      "xdescribe",
      "xit"
    ],
    "ignore": [
      "bower_components"
    ]
  },
  "devDependencies": {
    "chai": "^4.0.2",
    "chai-string": "^1.4.0",
    "eslint": "^4.11.0",
    "karma": "^1.7.1",
    "karma-chai": "^0.1.0",
    "karma-chrome-launcher": "^2.2.0",
    "karma-mocha": "^1.3.0",
    "karma-ng-html2js-preprocessor": "^1.0.0",
    "mocha": "^2.4.5",
    "nock": "^9.0.14",
    "nodemon": "^1.9.2",
    "set-cookie-parser": "^2.0.0",
    "sinon": "^4.1.2",
    "standard": "^7.0.1",
    "supertest": "^3.0.0"
  }
}
