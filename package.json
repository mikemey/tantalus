{
  "name": "tantalus",
  "version": "1.0.0",
  "description": "tantalus",
  "engines": {
    "node": "8"
  },
  "main": "backend/index.js",
  "scripts": {
    "lint": "standard",
    "prestart": "npm install",
    "start": "node backend/index.js",
    "schedule": "node backend/schedule.js",
