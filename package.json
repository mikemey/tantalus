    "test": "npm run lint -s && npm run backend-test -s",
    "backend-test": "mocha 'backend-test/**/**.spec.js'",
    "prewatch": "npm install",
    "watch": "nodemon -x 'npm run backend-test -s'"
  },
  "repository": { "type": "git", "url": "https://github.com/mikemey/tantalus.git" },
  "author": "mikemey",
  "license": "MIT",
  "bugs": {},
  "dependencies": {
    "body-parser": "^1.17.2",
    "cheerio": "^1.0.0-rc.2",
    "express": "^4.13.3",
    "moment": "^2.18.1",
    "mongodb": "^2.2.31",
    "morgan": "^1.8.2",
    "node-schedule": "^1.2.4",
    "request": "^2.81.0",
    "request-promise": "^4.2.1"
  },
  "standard": {
    "globals": [
      "after",
      "afterEach",
      "angular",
      "before",
      "beforeEach",
      "context",
      "describe",
      "expect",
      "it",
      "xdescribe",
      "xit"
    ],
    "ignore": [
      "bower_components"
    ]
  },
  "devDependencies": {
    "chai": "^4.0.2",
    "gulp-env": "^0.4.0",
    "gulp-mocha": "^4.3.1",
    "gulp-nodemon": "^2.2.1",
    "gulp-shell": "^0.6.3",
    "mocha": "^2.4.5",
    "nock": "^9.0.14",
    "nodemon": "^1.9.2",
